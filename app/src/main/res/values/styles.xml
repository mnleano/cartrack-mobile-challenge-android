<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CollapsingToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/white</item>
        <item name="collapsedTitleGravity">start</item>
        <item name="expandedTitleMarginBottom">@dimen/expanded_title_margin_bottom</item>
        <item name="expandedTitleMarginStart">@dimen/expanded_title_margin_start</item>
        <item name="expandedTitleTextAppearance">@style/CollapsingToolbarLayout.Expanded</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
    </style>

    <style name="CollapsingToolbarLayout.Expanded">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/expanded_toolbar_text_size</item>
    </style>

    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <style name="CollapsingToolbar" parent="Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/CollapsingToolbar.Theme</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>

    <style name="CollapsingToolbar.Theme">
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="colorControlNormal">@color/blue</item>
    </style>

    <style name="Guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextView.S" parent="TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.M" parent="TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextView.L" parent="TextView">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.XL" parent="TextView">
        <item name="android:textSize">@dimen/text_size_xl</item>
    </style>

    <style name="TextView.2XL" parent="TextView">
        <item name="android:textSize">@dimen/text_size_2xl</item>
    </style>

    <style name="TextView.Data" parent="TextView.M">
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="TextView.Data.Bold" parent="TextView.Data">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Data.Special" parent="TextView.Data">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.Data.Bold.Special" parent="TextView.Data.Bold">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.Data.MainTitle" parent="TextView.XL">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/background_underline</item>
        <item name="android:elevation">@dimen/_4dp</item>
        <item name="android:padding">@dimen/_16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Data.Menu" parent="TextView.Data.Bold.Special">
        <item name="android:layout_width">0dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:elevation">@dimen/_4dp</item>
        <item name="android:padding">@dimen/_16dp</item>
    </style>

    <style name="TextView.Title" parent="TextView.XL">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Label" parent="TextView.M">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="TextView.Button" parent="TextView.M">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="errorTextAppearance">@style/TextInputLayout.Error</item>
        <item name="hintTextAppearance">@style/TextInputLayout.Hint</item>
    </style>

    <style name="TextInputLayout.Hint">
        <item name="android:textColor">@color/text_color_hint</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextInputLayout.Error" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_color_red</item>
    </style>

    <style name="TextInputEditText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:lines">1</item>
        <item name="android:paddingTop">@dimen/_12dp</item>
        <item name="android:paddingBottom">@dimen/_12dp</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="TextInputEditText.Email" parent="TextInputEditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="TextInputEditText.Password" parent="TextInputEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextInputEditText.ActionGo" parent="TextInputEditText">
        <item name="android:imeOptions">actionGo</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@drawable/background_button</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemIconTint">@drawable/bottom_navigation_icon_tint</item>
        <item name="itemTextColor">@drawable/bottom_navigation_icon_tint</item>
        <item name="itemBackground">@drawable/bottom_navigation_background</item>
    </style>

    <style name="itemTextAppearanceActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="itemTextAppearanceInactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/stroke_weight</item>
        <item name="android:background">@color/stroke_color</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
    </style>

    <style name="Divider.Blue" parent="Divider">
        <item name="android:background">@color/blue</item>
    </style>

</resources>